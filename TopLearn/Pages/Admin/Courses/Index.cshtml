@page
@model TopLearn.Pages.Admin.Courses.IndexModel
@{
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست دوره ها</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست دوره های سایت
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                <thead class="thead-dark">
                                    <tr>
                                        <td>تصویر دوره</td>
                                        <th>عنوان دوره</th>
                                        <th>تعداد اپیزود</th>
                                        <th>دستورات</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.Courses)
                                    {
                                        <tr>
                                            <td>
                                                <img src="/Course/Thumbnail/@item.CourseImageName" />
                                            </td>
                                            <td>@item.CourseTitle</td>
                                            <td>@item.EpisodeCount</td>
                                            <td>
                                                <a href="/Admin/Courses/EditCourse/@item.CourseId" class="btn btn-warning btn-sm">ویرایش دوره</a>

                                                <a href="/Admin/Courses/EpisodeIndex/@item.CourseId" class="btn btn-danger btn-sm">اپیزود های دوره</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <div class="row">
                                <div style="margin:0px 20px">
                                    <a class="btn btn-outline btn-success" asp-page="CreateCourse">افزودن دوره جدید</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>