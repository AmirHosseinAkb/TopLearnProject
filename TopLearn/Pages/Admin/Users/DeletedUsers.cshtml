@page
@model TopLearn.Pages.Admin.Users.DeletedUsersModel
@{
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست کاربران سایت
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <div class="row" style="margin:10px 0px">
                        <form method="get">
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="filterUserName" placeholder="نام کاربری" />
                            </div>
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="filterEmail" placeholder="ایمیل" />
                            </div>
                            <div class="col-md-4">
                                <input type="submit" class="btn btn-success" value="جستجو" />
                                <a class="btn btn-warning" href="/Admin/Users">پاک کردن فیلدها</a>
                            </div>
                        </form>
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th>نام کاربری</th>
                                <th>ایمیل</th>
                                <th>فعال</th>
                                <th>تاریخ عضویت</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GetUsersForShowInAdminViewModel.Users)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <p class="text-success">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </p>
                                        }
                                    </td>
                                    <td>@item.RegisterDate.ToShamsi()</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Model.GetUsersForShowInAdminViewModel.PageCount; i++)
                                    {
                                        <li class="paginate_button @((i==Model.GetUsersForShowInAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0"><a href="/Admin/Users?pageId=@i">@i</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>