@page "{discountId}"
@model TopLearn.Pages.Admin.Discounts.EditDiscountModel
@{
}

<div class="row">
    <form role="form" method="post">
        <div class="col-lg-12">
            <div style="margin:10px 0px">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        ویرایش کد تخفیف
                    </div>
                    <div class="panel-body">
                        <input type="hidden" asp-for="Discount.DiscountId" />
                        <div class="form-group">
                            <input type="text" class="form-control" asp-for="Discount.DiscountCode" placeholder="کد تخفیف">
                            <span asp-validation-for="Discount.DiscountCode" class="text-danger"></span>
                            @if (Convert.ToBoolean(ViewData["IsExistCode"]) == true)
                            {
                                <div class="alert alert-danger">
                                    این کد تخفیف از قبل وجود دارد
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" asp-for="Discount.DiscountPercent" placeholder="درصد کد تخفیف">
                            <span asp-validation-for="Discount.DiscountPercent" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="number" class="form-control" asp-for="Discount.UsableCount" placeholder="تعداد استفاده(اختیاری) ">
                        </div>
                        <div class="form-group">
                            <input id="stDate" placeholder="تاریخ شروع" name="stDate" value="@((Model.Discount.StartDate != null) ? Model.Discount.StartDate.Value.ToShamsi():"")" />
                        </div>
                        <div class="form-group">
                            <input id="edDate" placeholder="تاریخ پایان" name="edDate" value="@((Model.Discount.EndDate!=null)?Model.Discount.EndDate.Value.ToShamsi():"")" />
                        </div>
                        <button type="submit" class="btn btn-success">ویرایش کدتخفیف</button>

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="/js/kendo.all.min.js"></script>
    <script>
        $(document).ready(function () {

            // create DatePicker from input HTML element
            $("#stDate").kendoDatePicker();
            $("#edDate").kendoDatePicker();
        });
    </script>
} 