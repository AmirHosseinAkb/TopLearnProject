@page
@model TopLearn.Pages.Admin.Discounts.IndexModel
@{
}


<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست کدهای تخفیف
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th>کدتخفیف</th>
                                <th>درصد کد تخفیف</th>
                                <th>تعداد استفاده</th>
                                <th>تاریخ شروع</th>
                                <th>تاریخ پایان</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Discounts)
                            {
                                <tr>
                                    <td>@item.DiscountCode</td>
                                    <td>@item.DiscountPercent</td>
                                    <td>@item.UsableCount</td>
                                    <td>@item.StartDate?.ToShamsi()</td>
                                    <td>@item.EndDate?.ToShamsi()</td>
                                    <td>
                                        <p>
                                            <a class="btn btn-warning" href="/Admin/Discounts/EditDiscount/@item.DiscountId">ویرایش</a>
                                            <a class="btn btn-danger" href="/Admin/Discounts/DeleteDiscount/@item.DiscountId">حذف</a>
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <a class="btn btn-outline btn-success" href="/Admin/Discounts/CreateDiscount">افزودن کدتخفیف جدید</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>