@page
@model TopLearn.Pages.Admin.Roles.IndexModel
@{
}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            لیست کاربران سایت
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                        <thead>
                            <tr role="row">
                                <th>عنوان نقش</th>
                                <th>دستورات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Roles)
                            {
                                <tr>
                                    <td>@item.RoleTilte</td>
                                    <td>
                                        <p>
                                            <a class="btn btn-warning" href="/Admin/Roles/EditRole/@item.RoleId">ویرایش</a>
                                            <a class="btn btn-danger" href="/Admin/Roles/DeleteRole/@item.RoleId">حذف</a>
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <a class="btn btn-outline btn-success" href="/Admin/Roles/CreateRole">افزودن نقش جدید</a>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>